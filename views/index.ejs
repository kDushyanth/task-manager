        <div class="container content" style="margin-top: 20px;">

            <div>
                <div class="d-flex justify-content-around flex-wrap">
                    <% for(var i=0;!(i>=info.length);i++){ %>
                        <div class="card m-1 mt-2" style="width: 18rem;">
                            <div class="card-body">
